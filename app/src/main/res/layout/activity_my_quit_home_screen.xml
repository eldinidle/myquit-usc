<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyQuitHomeScreen">

    <CalendarView
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:id="@+id/calendarView"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:clickable="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="MyQuit Plans"
        android:id="@+id/quitPlans"
        android:layout_below="@+id/calendarView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Achievements/Progress/Statistics"
        android:id="@+id/progressButton"
        android:layout_alignTop="@+id/quitPlans"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignEnd="@+id/calendarView" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="Oops I smoked."
        android:id="@+id/oopsSmoked"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/quitPlans"
        android:layout_alignEnd="@+id/quitPlans" />

    <Button
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:text="I want to smoke now."
        android:id="@+id/smokeNow"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/calendarView"
        android:layout_alignEnd="@+id/calendarView" />

</RelativeLayout>
