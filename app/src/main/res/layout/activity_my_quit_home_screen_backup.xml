<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MyQuitHomeScreen">

    <CalendarView
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:id="@+id/calendarViewOut"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:shownWeekCount="4"
        android:showWeekNumber="false"
        android:measureAllChildren="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout2"
        android:layout_below="@+id/calendarViewOut">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="My Plans"
                android:id="@+id/quitPlans"
                android:layout_below="@+id/calendarViewOut"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_weight="1"
                android:singleLine="false"

                android:background="@color/caldroid_white"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="I just smoked!"
                android:id="@+id/oopsSmoked"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/quitPlans"
                android:layout_alignEnd="@+id/quitPlans"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="@color/caldroid_white"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="My Progress"
                android:id="@+id/progressButton"
                android:layout_alignTop="@+id/quitPlans"
                android:layout_alignRight="@+id/calendarViewOut"
                android:layout_alignEnd="@+id/calendarViewOut"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="@color/caldroid_white"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="I want to smoke!"
                android:id="@+id/smokeNow"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/calendarViewOut"
                android:layout_alignEnd="@+id/calendarViewOut"
                android:layout_columnSpan="1"
                android:layout_rowSpan="1"
                android:layout_weight="1"
                android:singleLine="false"
                android:background="@color/caldroid_white"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
