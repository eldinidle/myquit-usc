<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.usc.reach.myquitusc"
    android:versionCode="1"
    android:versionName="0.10"
    >

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MyQuitHomeScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyQuitPlans"
            android:label="@string/title_activity_my_quit_plans"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MyQuitCalendar"
            android:label="@string/title_activity_my_quit_calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MyQuitPrePlanCalendar"
            android:label="@string/title_activity_my_quit_pre_plan_calendar"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".MyQuitProgress"
            android:label="@string/title_activity_my_quit_progress"
            android:screenOrientation="sensorLandscape" >
        </activity>
        <activity
            android:name=".MyQuitTasksActivity"
            android:label="@string/title_activity_my_quit_tasks"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name=".MyQuitReceiver"
            android:enabled="true"
            android:exported="false" >
        </receiver>

        <service
            android:name=".MyQuitService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name=".MyQuitEMA"
            android:label="@string/title_activity_my_quit_em"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name=".MyQuitOnBootBroadcastReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".MyQuitLoginActivity"
            android:label="@string/title_activity_my_quit_login"
            android:windowSoftInputMode="adjustResize|stateHidden" >
        </activity>
        <activity
            android:name=".MyQuitIntentPrompt"
            android:label="@string/title_activity_my_quit_intent_prompt"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
