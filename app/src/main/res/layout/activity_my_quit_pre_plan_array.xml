<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="edu.usc.reach.myquitusc.MyQuitPrePlanArray">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/situationListView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:choiceMode="multipleChoice"
        android:layout_above="@+id/preplanbuttons" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/preplanbuttons">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Add my own"
            android:id="@+id/submitOwn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false"
            android:onClick="addSituation" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I&apos;m done"
            android:id="@+id/submitArray"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:onClick="nextSituation" />

    </LinearLayout>

</RelativeLayout>
